<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
          <div class="media-left">
            <%= image_tag avatar_url, class: 'media-object' %>
          </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= user_has_posts ? pluralize(@user.posts.count, 'post') : @user.name + " has not submitted any posts yet." %>,
          <%= user_has_comments ? pluralize(@user.comments.count, 'comment') : @user.name + " has not submitted any posts yet." %>
        </small>
      </div>
    </div>
  </div>
</div>

// #14
<h2>Posts</h2>
<%= render @user.posts %>

<h2>Comments</h2>
<%= render @user.comments %>

<h2>Favorite Posts</h2>
<%= render partial: 'user_favorite', locals: { posts: @user.posts, user: @user} %>

